/**
 * 全局样式定义
 */

/* 默认样式重置 */
page {
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica,
    'PingFang SC', 'Hiragino Sans GB', 'Microsoft YaHei', Arial, sans-serif;
  font-size: 16px;
  line-height: 1.5;
  color: #333;
  background-color: #f6f6f6;
  box-sizing: border-box;
  -webkit-font-smoothing: antialiased;
}

/* 清除浮动 */
.clearfix:after {
  content: "";
  display: block;
  clear: both;
}

/* 标准容器样式 */
.container {
  padding: 30rpx;
  box-sizing: border-box;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
}

/* 页面标题 */
.page-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 30rpx;
}

/* 提示文本 */
.tips-text {
  font-size: 24rpx;
  color: #888;
  line-height: 1.5;
  margin: 20rpx 0;
}

/* 警告文本 */
.warning-text {
  font-size: 24rpx;
  color: #ff4d4f;
  line-height: 1.5;
  margin: 20rpx 0;
}

/* 卡片样式 */
.card {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.1);
}

/* 主按钮样式 */
.btn-primary {
  background-color: #4A90E2;
  color: white;
  border: none;
  border-radius: 8rpx;
  padding: 20rpx 30rpx;
  font-size: 28rpx;
  text-align: center;
  margin: 20rpx 0;
}

/* 次级按钮样式 */
.btn-secondary {
  background-color: #f0f0f0;
  color: #666;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  padding: 20rpx 30rpx;
  font-size: 28rpx;
  text-align: center;
  margin: 20rpx 0;
}

/* 图标样式 */
.icon {
  width: 40rpx;
  height: 40rpx;
  vertical-align: middle;
  margin-right: 10rpx;
}

/* 用户头像 */
.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background-color: #ccc;
}

/* 进度条样式 */
.progress-bar {
  width: 100%;
  height: 20rpx;
  background-color: #f0f0f0;
  border-radius: 10rpx;
  overflow: hidden;
  margin: 20rpx 0;
}

.progress-bar-inner {
  height: 100%;
  background-color: #4A90E2;
  transition: width 0.3s ease;
}

/* 底部固定区域 */
.footer {
  width: 100%;
  position: fixed;
  bottom: 0;
  left: 0;
  background-color: #fff;
  padding: 20rpx 30rpx;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.1);
  box-sizing: border-box;
}

/* 底部安全区适配 */
.safe-bottom {
  padding-bottom: env(safe-area-inset-bottom);
} 