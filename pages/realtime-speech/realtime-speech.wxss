/* realtime-speech.wxss */
.container {
  padding: 30rpx;
}

.page-title {
  font-size: 40rpx;
  font-weight: bold;
  margin-bottom: 40rpx;
  color: #333;
}

/* 文本输入区域 */
.input-area {
  width: 100%;
  margin-bottom: 30rpx;
  position: relative;
}

.text-input {
  width: 100%;
  height: 360rpx;
  background-color: #fff;
  border: 1rpx solid #eee;
  border-radius: 12rpx;
  padding: 20rpx;
  font-size: 32rpx;
  box-sizing: border-box;
}

.word-count {
  position: absolute;
  bottom: 10rpx;
  right: 20rpx;
  font-size: 24rpx;
  color: #999;
}

/* 模板区域 */
.template-area {
  width: 100%;
  margin-bottom: 50rpx;
}

.template-btn {
  background-color: #f5f5f5;
  color: #666;
  font-size: 28rpx;
  height: 70rpx;
  line-height: 70rpx;
  border-radius: 35rpx;
  border: 1rpx solid #ddd;
}

/* 播报控制 */
.speech-control {
  width: 100%;
  display: flex;
  justify-content: center;
  margin-bottom: 40rpx;
}

.speech-btn {
  width: 300rpx;
  height: 100rpx;
  border-radius: 50rpx;
  background-color: #4A90E2;
  color: white;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  box-shadow: 0 4rpx 12rpx rgba(74, 144, 226, 0.3);
}

.speech-btn.active {
  background-color: #FF3B30;
}

.btn-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
}

/* 播放控制条 */
.playback-control {
  width: 100%;
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
  box-sizing: border-box;
  margin-bottom: 30rpx;
}

.progress-bar {
  width: 100%;
  height: 6rpx;
  background-color: #f0f0f0;
  border-radius: 3rpx;
  margin-bottom: 10rpx;
  overflow: hidden;
}

.progress-inner {
  height: 100%;
  background-color: #4A90E2;
  width: 0;
  transition: width 0.3s linear;
}

.time-info {
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
  color: #999;
  margin-bottom: 20rpx;
}

.volume-control {
  display: flex;
  align-items: center;
}

.volume-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}

.volume-slider {
  flex: 1;
}

/* 模板弹窗 */
.template-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
}

.modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
}

.modal-content {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #fff;
  border-radius: 24rpx 24rpx 0 0;
  padding: 30rpx;
  animation: slideUp 0.3s ease;
}

@keyframes slideUp {
  from {
    transform: translateY(100%);
  }
  to {
    transform: translateY(0);
  }
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.modal-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.modal-close {
  font-size: 48rpx;
  color: #999;
  line-height: 1;
}

.template-list {
  max-height: 600rpx;
  overflow-y: auto;
}

.template-item {
  padding: 24rpx;
  border-bottom: 1rpx solid #f0f0f0;
  font-size: 28rpx;
  color: #333;
}

.template-item:active {
  background-color: #f9f9f9;
} 