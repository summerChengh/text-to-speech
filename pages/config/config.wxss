.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  padding: 0;
  height: 100vh;
  background-color: #f5f5f5;
}

.header {
  width: 100%;
  padding: 20rpx 30rpx;
  background-color: #ffffff;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
  margin-bottom: 30rpx;
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333333;
}

.config-area {
  width: 100%;
  flex: 1;
  padding: 0 30rpx;
}

.info-text {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 40rpx;
  text-align: center;
}

.config-item {
  background-color: #ffffff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.config-label {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 20rpx;
}

.config-input {
  width: 100%;
  height: 80rpx;
  border: 1rpx solid #eeeeee;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  color: #333333;
  background-color: #f9f9f9;
}

.input-wrapper {
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 100%;
}

.toggle-btn {
  width: 100rpx;
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-left: 20rpx;
  background-color: #e6e6e6;
  border-radius: 8rpx;
}

.toggle-btn text {
  font-size: 24rpx;
  color: #666;
}

.tips {
  width: 100%;
  padding: 0 30rpx;
  margin-bottom: 30rpx;
}

.tip-text {
  font-size: 24rpx;
  color: #999;
  line-height: 1.5;
}

.button-area {
  width: 100%;
  padding: 30rpx;
}

.btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 44rpx;
  font-size: 32rpx;
  color: #ffffff;
  text-align: center;
  margin-bottom: 20rpx;
}

.save-btn {
  background-color: #007AFF;
}

.save-btn[disabled] {
  background-color: #7FBDFF;
} 