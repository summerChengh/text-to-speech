.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  padding: 0;
  height: 100vh;
  background-color: #f5f5f5;
}

.header {
  width: 100%;
  padding: 20rpx 30rpx;
  background-color: #ffffff;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
  margin-bottom: 30rpx;
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333333;
}

.settings-area {
  width: 100%;
  flex: 1;
  padding: 0 30rpx;
}

.setting-item {
  background-color: #ffffff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.setting-label {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 20rpx;
}

.setting-picker {
  padding: 20rpx 0;
  border-bottom: 1rpx solid #eeeeee;
}

.picker-text {
  font-size: 30rpx;
  color: #666666;
}

.volume-slider {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin: 30rpx 0 20rpx 0;
}

.volume-icon {
  width: 40rpx;
  height: 40rpx;
}

.slider {
  flex: 1;
  margin: 0 20rpx;
}

.volume-value {
  text-align: center;
  font-size: 28rpx;
  color: #999999;
  margin-top: 10rpx;
}

.button-area {
  width: 100%;
  padding: 30rpx;
}

.btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 44rpx;
  font-size: 32rpx;
  color: #ffffff;
  text-align: center;
  margin-bottom: 20rpx;
}

.save-btn {
  background-color: #007AFF;
} 