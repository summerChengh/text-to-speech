/* text-to-speech.wxss */
.container {
  padding: 30rpx;
}

.page-title {
  font-size: 40rpx;
  font-weight: bold;
  margin-bottom: 40rpx;
  color: #333;
}

/* 上传区域 */
.upload-area {
  width: 100%;
  margin-bottom: 40rpx;
}

.upload-box {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  height: 300rpx;
  border: 2rpx dashed #ccc;
  border-radius: 16rpx;
  background-color: #fafafa;
}

.upload-icon {
  font-size: 80rpx;
  color: #4A90E2;
  margin-bottom: 20rpx;
  line-height: 1;
}

.upload-text {
  font-size: 32rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.upload-hint {
  font-size: 24rpx;
  color: #999;
}

/* 文本预览区 */
.preview-area {
  margin-bottom: 40rpx;
  width: 100%;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  color: #333;
}

.text-preview {
  height: 300rpx;
  background-color: #fff;
  border: 1rpx solid #eee;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 10rpx;
  width: 100%;
  box-sizing: border-box;
}

.word-count {
  text-align: right;
  font-size: 24rpx;
  color: #999;
}

/* 控制面板 */
.control-panel {
  width: 100%;
  margin-bottom: 40rpx;
}

.control-item {
  margin-bottom: 30rpx;
}

.control-label {
  display: block;
  margin-bottom: 15rpx;
  font-size: 28rpx;
  color: #666;
}

.picker-view {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color: #fff;
  padding: 20rpx;
  border-radius: 8rpx;
  border: 1rpx solid #eee;
}

.arrow {
  font-size: 24rpx;
  color: #999;
}

.slider-container {
  display: flex;
  align-items: center;
}

.slider-label {
  font-size: 24rpx;
  color: #999;
  width: 40rpx;
}

slider {
  flex: 1;
}

/* 操作按钮 */
.action-buttons {
  display: flex;
  justify-content: space-around;
  margin-top: 40rpx;
}

.btn-action {
  width: 200rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  border-radius: 40rpx;
  font-size: 30rpx;
  color: white;
}

.btn-play {
  background-color: #4A90E2;
}

.btn-pause {
  background-color: #F5A623;
}

.btn-stop {
  background-color: #FF3B30;
}

/* 状态提示 */
.status-area {
  margin-top: 40rpx;
  margin-bottom: 20rpx;
}

.progress-container {
  width: 100%;
}

.progress-text {
  font-size: 24rpx;
  color: #999;
  text-align: center;
  display: block;
  margin-top: 10rpx;
}

/* 错误提示 */
.error-area {
  margin-top: 20rpx;
}

.error-text {
  color: #FF3B30;
  font-size: 28rpx;
  text-align: center;
} 