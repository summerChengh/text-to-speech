<view class="container">
  <!-- 顶部导航栏 -->
  <view class="header">
    <view class="title">智能语音播报助手</view>
    <view class="user-avatar" bindtap="goToUserCenter">
      <image wx:if="{{hasUserInfo}}" class="avatar" src="{{userInfo.avatarUrl}}"></image>
      <view wx:else class="avatar-placeholder" bindtap="getUserProfile"></view>
    </view>
  </view>
  
  <!-- 功能卡片区域 -->
  <view class="feature-container">
    <block wx:for="{{features}}" wx:key="id">
      <view class="feature-card" bindtap="navigateToFeature" data-feature="{{item}}">
        <view class="feature-icon">
          <image src="{{item.icon}}" mode="aspectFit"></image>
        </view>
        <view class="feature-info">
          <view class="feature-title">{{item.title}}</view>
          <view class="feature-desc">{{item.desc}}</view>
        </view>
      </view>
    </block>
  </view>
  
  <!-- 底部提示 -->
  <view class="footer-tips">
    <view class="tips-text">首次使用需授权麦克风权限</view>
    
    <!-- 未授权麦克风权限时的提示 -->
    <block wx:if="{{!hasMicPermission}}">
      <view class="permission-button" bindtap="requestMicPermission">
        <text>点击授权麦克风</text>
      </view>
    </block>
    
    <!-- 已授权麦克风权限的提示 -->
    <block wx:else>
      <view class="tips-text permission-granted">麦克风权限已授权 ✓</view>
    </block>
  </view>
</view> 