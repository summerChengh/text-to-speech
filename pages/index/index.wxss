/* 全局容器 */
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  padding: 0;
  height: 100vh;
  background-color: #f5f5f5;
}

/* 头部样式 */
.header {
  width: 100%;
  padding: 20rpx 30rpx;
  background-color: #ffffff;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
  margin-bottom: 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333333;
}

.settings-icon {
  width: 40rpx;
  height: 40rpx;
}

/* 内容区域 */
.content {
  width: 100%;
  flex: 1;
  padding: 0 30rpx;
}

.text-area {
  background-color: #ffffff;
  border-radius: 12rpx;
  padding: 30rpx;
  min-height: 300rpx;
  max-height: 50vh;
  overflow-y: auto;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  margin-bottom: 20rpx;
}

.text-content {
  font-size: 30rpx;
  color: #333333;
  line-height: 1.5;
}

.placeholder {
  font-size: 28rpx;
  color: #999999;
}

.voice-settings {
  background-color: #fff;
  border-radius: 8rpx;
  padding: 15rpx;
  margin-bottom: 20rpx;
  display: flex;
  justify-content: center;
}

.voice-info {
  font-size: 24rpx;
  color: #666;
}

/* 按钮区域 */
.button-area {
  width: 100%;
  padding: 30rpx;
}

.btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 44rpx;
  font-size: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 20rpx;
}

.btn-icon {
  width: 36rpx;
  height: 36rpx;
  margin-right: 15rpx;
}

.edit-btn {
  background-color: #4CD964;
  color: #ffffff;
}

.text-btn {
  background-color: #FF9500;
  color: #ffffff;
}

.play-btn {
  background-color: #007AFF;
  color: #ffffff;
}

.playing {
  background-color: #5AC8FA;
}

.play-btn[disabled] {
  background-color: #999999;
  color: #ffffff;
  opacity: 0.6;
}

.playback-controls {
  margin-top: 10rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
}

.progress-slider {
  width: 100%;
  margin-bottom: 15rpx;
}

.btn-small {
  width: 200rpx;
  height: 60rpx;
  line-height: 60rpx;
  border-radius: 30rpx;
  font-size: 28rpx;
  color: #ffffff;
  background-color: #FF3B30;
}

.settings-btn {
  padding: 6rpx 20rpx;
  border-radius: 30rpx;
  background-color: #007AFF;
  display: flex;
  align-items: center;
  justify-content: center;
}

.settings-text {
  font-size: 28rpx;
  color: #ffffff;
}

.settings-button-container {
  width: 100%;
  padding: 0 30rpx 20rpx 30rpx;
}

.settings-btn-bottom {
  background-color: #5AC8FA;
  color: #ffffff;
}

.header-btns {
  display: flex;
  flex-direction: row;
}

.settings-btn, .api-btn {
  padding: 6rpx 20rpx;
  border-radius: 30rpx;
  background-color: #007AFF;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-left: 10rpx;
}

.settings-text, .api-text {
  font-size: 28rpx;
  color: #ffffff;
}

.api-status-warning {
  background-color: #FFE5E5;
  border: 1px solid #FF7070;
  border-radius: 8rpx;
  padding: 15rpx;
  margin-bottom: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.api-status-warning text {
  font-size: 24rpx;
  color: #FF3B30;
  margin-bottom: 10rpx;
}

.config-btn {
  background-color: #FF3B30;
  color: #ffffff;
  font-size: 24rpx;
  height: 50rpx;
  line-height: 50rpx;
  padding: 0 20rpx;
  border-radius: 25rpx;
} 