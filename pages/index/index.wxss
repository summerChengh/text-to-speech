/* 容器样式 */
.container {
  padding: 40rpx 30rpx;
  background-color: #f8f8f8;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
}

/* 顶部导航栏 */
.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 60rpx;
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
}

.user-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  overflow: hidden;
  background-color: #e0e0e0;
}

.avatar {
  width: 100%;
  height: 100%;
}

.avatar-placeholder {
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #cccccc;
  position: relative;
}

.avatar-placeholder::before,
.avatar-placeholder::after {
  content: '';
  position: absolute;
  background-color: #ffffff;
}

.avatar-placeholder::before {
  width: 40%;
  height: 4rpx;
  top: 50%;
  left: 30%;
  transform: translateY(-50%);
}

.avatar-placeholder::after {
  width: 4rpx;
  height: 40%;
  left: 50%;
  top: 30%;
  transform: translateX(-50%);
}

/* 功能卡片区域 */
.feature-container {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  margin-bottom: 60rpx;
}

.feature-card {
  width: 47%;
  height: 240rpx;
  background-color: #ffffff;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
  margin-bottom: 30rpx;
  padding: 30rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  transition: transform 0.3s;
}

.feature-card:active {
  transform: scale(0.98);
}

.feature-icon {
  height: 100rpx;
  display: flex;
  align-items: center;
}

.feature-icon image {
  width: 80rpx;
  height: 80rpx;
}

.feature-info {
  margin-top: 20rpx;
}

.feature-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.feature-desc {
  font-size: 24rpx;
  color: #888;
}

/* 底部提示 */
.footer-tips {
  margin-top: auto;
  padding: 30rpx 0;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.tips-text {
  font-size: 26rpx;
  color: #999;
  text-align: center;
  margin-bottom: 20rpx;
}

.permission-button {
  background-color: #4A90E2;
  color: white;
  padding: 16rpx 40rpx;
  border-radius: 50rpx;
  font-size: 28rpx;
}

.permission-granted {
  color: #4CAF50;
  font-weight: bold;
} 