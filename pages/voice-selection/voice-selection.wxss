/* voice-selection.wxss */
.container {
  padding: 30rpx;
}

.page-title {
  font-size: 40rpx;
  font-weight: bold;
  margin-bottom: 40rpx;
  color: #333;
}

/* 标签分类 */
.tab-container {
  display: flex;
  width: 100%;
  border-bottom: 1rpx solid #eee;
  margin-bottom: 30rpx;
}

.tab {
  flex: 1;
  text-align: center;
  padding: 20rpx 0;
  font-size: 32rpx;
  color: #666;
  position: relative;
}

.tab.active {
  color: #4A90E2;
  font-weight: bold;
}

.tab.active:after {
  content: '';
  position: absolute;
  bottom: -1rpx;
  left: 25%;
  width: 50%;
  height: 6rpx;
  background-color: #4A90E2;
  border-radius: 3rpx;
}

/* 音色列表 */
.voice-list {
  width: 100%;
}

.voice-card {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.voice-info {
  margin-bottom: 20rpx;
}

.voice-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.voice-tag {
  display: inline-block;
  font-size: 24rpx;
  color: #666;
  background-color: #f5f5f5;
  padding: 4rpx 16rpx;
  border-radius: 20rpx;
}

.voice-actions {
  display: flex;
  justify-content: flex-start;
}

.action-btn {
  display: flex;
  align-items: center;
  padding: 10rpx 20rpx;
  background-color: #f5f5f5;
  border-radius: 30rpx;
  margin-right: 20rpx;
}

.action-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 8rpx;
}

.action-btn text {
  font-size: 24rpx;
  color: #666;
}

.action-btn.listen {
  background-color: #E1F0FF;
}

.action-btn.listen text {
  color: #4A90E2;
}

.action-btn.set-default {
  background-color: #FFF6E1;
}

.action-btn.set-default text {
  color: #F5A623;
}

.action-btn.set-default.active {
  background-color: #F5A623;
}

.action-btn.set-default.active text {
  color: #fff;
}

.action-btn.delete {
  background-color: #FFE5E5;
}

.action-btn.delete text {
  color: #FF3B30;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 40rpx;
}

.clone-btn {
  background-color: #4A90E2;
  color: white;
  font-size: 28rpx;
  padding: 16rpx 30rpx;
  border-radius: 30rpx;
}

/* 播放指示器 */
.playing-indicator {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: rgba(74, 144, 226, 0.9);
  padding: 20rpx 30rpx;
  color: white;
  z-index: 100;
}

.playing-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.playing-name {
  font-size: 28rpx;
}

.stop-btn {
  font-size: 28rpx;
  background-color: rgba(255, 255, 255, 0.2);
  padding: 10rpx 30rpx;
  border-radius: 30rpx;
} 