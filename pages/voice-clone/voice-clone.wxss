/* voice-clone.wxss */
.container {
  padding: 30rpx;
}

.page-title {
  font-size: 40rpx;
  font-weight: bold;
  margin-bottom: 40rpx;
  color: #333;
}

/* 警告区域 */
.warning-block {
  background-color: #FFF1F0;
  border: 1px solid #FFCCC7;
  border-radius: 8rpx;
  padding: 24rpx;
  margin-bottom: 30rpx;
}

.warning-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #FF4D4F;
  margin-bottom: 16rpx;
}

.warning-content {
  font-size: 26rpx;
  color: #FF4D4F;
  line-height: 1.5;
}

/* 指引区域 */
.guide-block {
  background-color: #FFFFFF;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.guide-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 24rpx;
  color: #333;
}

.step-list {
  width: 100%;
}

.step-item {
  display: flex;
  margin-bottom: 24rpx;
}

.step-number {
  width: 48rpx;
  height: 48rpx;
  border-radius: 24rpx;
  background-color: #4A90E2;
  color: white;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-right: 16rpx;
  flex-shrink: 0;
}

.step-content {
  flex: 1;
}

.step-text {
  display: block;
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.step-desc {
  display: block;
  font-size: 24rpx;
  color: #999;
}

/* 上传区域 */
.upload-area {
  margin: 40rpx 0;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.upload-btn, .record-btn {
  width: 80%;
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 44rpx;
  font-size: 32rpx;
  margin: 10rpx 0;
}

.upload-btn {
  background-color: #4A90E2;
  color: white;
}

.record-btn {
  background-color: #FF9500;
  color: white;
}

.upload-text {
  font-size: 28rpx;
  color: #999;
  margin: 10rpx 0;
}

/* 录音区域 */
.recording-area {
  margin: 40rpx 0;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.recording-text {
  font-size: 32rpx;
  font-weight: bold;
  color: #FF3B30;
  margin-bottom: 16rpx;
}

.recording-time {
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
}

.recording-animation {
  display: flex;
  align-items: flex-end;
  height: 60rpx;
  margin-bottom: 30rpx;
}

.wave-item {
  width: 6rpx;
  height: 30rpx;
  background-color: #4A90E2;
  margin: 0 6rpx;
  border-radius: 3rpx;
  animation: wave 1s infinite ease-in-out;
}

.wave-item:nth-child(1) { animation-delay: 0s; }
.wave-item:nth-child(2) { animation-delay: 0.2s; }
.wave-item:nth-child(3) { animation-delay: 0.4s; }
.wave-item:nth-child(4) { animation-delay: 0.6s; }
.wave-item:nth-child(5) { animation-delay: 0.8s; }

@keyframes wave {
  0%, 100% { height: 10rpx; }
  50% { height: 60rpx; }
}

.recording-controls {
  margin-top: 20rpx;
}

/* 文件信息区域 */
.file-info {
  background-color: #FFFFFF;
  border-radius: 12rpx;
  padding: 30rpx;
  margin: 30rpx 0;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.file-name {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 24rpx;
  word-break: break-all;
}

.file-controls {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.control-btn {
  margin: 10rpx 0;
  font-size: 28rpx;
  height: 70rpx;
  line-height: 70rpx;
  border-radius: 35rpx;
}

.btn-play {
  flex: 1;
  background-color: #4A90E2;
  color: white;
  margin-right: 10rpx;
}

.btn-confirm {
  flex: 1;
  background-color: #4CAF50;
  color: white;
  margin-right: 10rpx;
}

.btn-cancel, .btn-stop {
  flex: 1;
  background-color: #FF3B30;
  color: white;
}

/* 处理中区域 */
.processing-area {
  margin: 40rpx 0;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.processing-text {
  font-size: 32rpx;
  font-weight: bold;
  color: #4A90E2;
  margin-bottom: 30rpx;
}

.progress-bar {
  width: 100%;
  height: 16rpx;
  background-color: #f0f0f0;
  border-radius: 8rpx;
  overflow: hidden;
  margin-bottom: 16rpx;
}

.progress-inner {
  height: 100%;
  background-color: #4A90E2;
  transition: width 0.3s linear;
}

.progress-text {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
}

.estimated-time {
  font-size: 24rpx;
  color: #999;
}

/* 结果区域 */
.result-area {
  background-color: #FFFFFF;
  border-radius: 12rpx;
  padding: 30rpx;
  margin: 30rpx 0;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.result-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #4CAF50;
  text-align: center;
  margin-bottom: 30rpx;
}

.result-preview {
  margin-bottom: 30rpx;
}

.preview-btn {
  background-color: #4A90E2;
  color: white;
  font-size: 32rpx;
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 44rpx;
}

.voice-form {
  width: 100%;
}

.form-item {
  margin-bottom: 24rpx;
}

.form-label {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 16rpx;
}

.form-input {
  width: 100%;
  height: 80rpx;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.save-btn {
  background-color: #4CAF50;
  color: white;
  font-size: 32rpx;
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 44rpx;
}

.save-btn[disabled] {
  background-color: #cccccc;
  color: #999999;
}

/* 示例区域 */
.example-area {
  background-color: #FFFFFF;
  border-radius: 12rpx;
  padding: 30rpx;
  margin: 30rpx 0;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.example-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 16rpx;
}

.example-desc {
  font-size: 26rpx;
  color: #999;
  margin-bottom: 20rpx;
}

.example-play {
  display: flex;
  align-items: center;
  background-color: #F0F8FF;
  padding: 20rpx;
  border-radius: 8rpx;
}

.play-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 16rpx;
}

/* 播放指示器 */
.playing-indicator {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: rgba(74, 144, 226, 0.9);
  padding: 20rpx 30rpx;
  color: white;
  z-index: 100;
}

.playing-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.playing-name {
  font-size: 28rpx;
}

.stop-btn {
  font-size: 28rpx;
  background-color: rgba(255, 255, 255, 0.2);
  padding: 10rpx 30rpx;
  border-radius: 30rpx;
} 